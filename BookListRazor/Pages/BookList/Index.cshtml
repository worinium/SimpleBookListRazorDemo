@page
@model BookListRazor.Pages.BookList.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-8">
        <h2 class="text-info">Book List Demo</h2>
    </div>
    <div class="col-2">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Book</a>
    </div>
    <div class="col-2">
        <a asp-page="Generate PDf" class="btn btn-info form-control text-white">Download PDF</a>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary" style="width:100%">
                        <th style="width:15%">
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th style="width:15%">
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th style="width:20%">
                            <label asp-for="Books.FirstOrDefault().Publisher"></label>
                        </th>
                        <th style="width:8%">
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th style="width:19%">
                            <label asp-for="Books.FirstOrDefault().Address"></label>
                        </th>
                        <th style="width:8%">
                            <label asp-for="Books.FirstOrDefault().Pages"></label>
                        </th>
                        <th style="width:40%">
                            <label>Action</label>
                        </th>
                    </tr>
                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.Author)</td>
                            <td>@Html.DisplayFor(m => item.Publisher)</td>
                            <td>@Html.DisplayFor(m => item.ISBN)</td>
                            <td>@Html.DisplayFor(m => item.Address)</td>
                            <td>@Html.DisplayFor(m => item.Pages)</td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success text-white">Edit</a>
                                <button onclick="return confirm('Are you sure you want to delete?')" asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</button>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Books Available</p>
            }

        </form>
    </div>

    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br />
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        <label asp-for="Books.FirstOrDefault().Name"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().Author"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().Publisher"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().ISBN"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().Address"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().Pages"></label>
                    </th>
                    <th>
                        <label>Action</label>
                    </th>
                </tr>
            </thead>

        </table>
    </div>
</div>

@section scripts{
    <script src="~/js/BookList.js"></script>
}



@page
@model BookListRazor.Pages.BookList.CreateModel
@{
    ViewData["Title"] = "Create";
}

<br/>
<h2 class="text-info">Create Book</h2>
<div class="border container" style="padding:25px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-7">
                <input asp-for="Book.Name" class="form-control"/>
            </div>
            <span asp-validation-for="Book.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-7">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Publisher"></label>
            </div>
            <div class="col-7">
                <input asp-for="Book.Publisher" class="form-control" />
            </div>
            <span asp-validation-for="Book.Publisher" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-7">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Address"></label>
            </div>
            <div class="col-7">
                <input asp-for="Book.Address" class="form-control" />
            </div>
            <span asp-validation-for="Book.Address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Pages"></label>
            </div>
            <div class="col-7">
                <input asp-for="Book.Pages" class="form-control" />
            </div>
            <span asp-validation-for="Book.Pages" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
              <input type="submit" value="Create" class="btn btn-sm btn-primary form-control"/>
            </div>
            <div class="col-3">
              <a asp-page="Index" class="btn btn-primary btn-sm form-control">Back to List</a>
            </div>
            
        </div>
    </form>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/> 
}